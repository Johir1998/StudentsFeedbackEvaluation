<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="2"
    android:padding="2dp"
    android:background="@color/Green"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/diu_icon" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight=".05"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/Student_Login_Button_Id"
        android:text="@string/Student_Login_Button_Text"
        android:textSize="18sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight=".05"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/Teacher_Login_Button_Id"
        android:text="@string/Teacher_Login_Button_Text"
        android:textSize="18sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight=".05"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/Result_Login_Button_Id"
        android:text="@string/Result_Login_Button_Text"
        android:textSize="18sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight=".05"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/Admin_Panel_Button_Id"
        android:text="@string/Admin_Panel_Button_Text"
        android:textSize="18sp" />

</LinearLayout>
